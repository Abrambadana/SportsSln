@model SportsStore.Models.Order
@{
    ViewData["Title"] = "Checkout";
    Layout = "_CheckoutLayout";
}
<div class="checkout-container">
    <h2 class="checkout-title">Check out now!</h2>
    <p class="checkout-subtitle">Please enter your details, and we'll ship your goods right away.</p>

    <form asp-action="Checkout" asp-controller="Home" method="post" class="checkout-form">
        

        <div class="form-card">
            <h3 class="form-section-title">
                <i class="fas fa-user me-2"></i>Ship to
            </h3>
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control custom-input" placeholder="Enter your full name" />
                <span asp-validation-for="Name" class="validation-message"></span>
            </div>
        </div>

        <div class="form-card">
            <h3 class="form-section-title">
                <i class="fas fa-map-marker-alt me-2"></i>Address
            </h3>
            <div class="form-group">
                <label asp-for="Line1" class="form-label"></label>
                <input asp-for="Line1" class="form-control custom-input" placeholder="Street address" />
                <span asp-validation-for="Line1" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="Line2" class="form-label"></label>
                <input asp-for="Line2" class="form-control custom-input" placeholder="Apartment, suite, etc. (optional)" />
                <span asp-validation-for="Line2" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="Line3" class="form-label"></label>
                <input asp-for="Line3" class="form-control custom-input" placeholder="Additional address info (optional)" />
                <span asp-validation-for="Line3" class="validation-message"></span>
            </div>

            <div class="form-row">
                <div class="form-group form-col">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control custom-input" placeholder="City" />
                    <span asp-validation-for="City" class="validation-message"></span>
                </div>
                <div class="form-group form-col">
                    <label asp-for="State" class="form-label"></label>
                    <input asp-for="State" class="form-control custom-input" placeholder="State/Province" />
                    <span asp-validation-for="State" class="validation-message"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group form-col">
                    <label asp-for="Zip" class="form-label"></label>
                    <input asp-for="Zip" class="form-control custom-input" placeholder="Postal code" />
                    <span asp-validation-for="Zip" class="validation-message"></span>
                </div>
                <div class="form-group form-col">
                    <label asp-for="Country" class="form-label"></label>
                    <input asp-for="Country" class="form-control custom-input" placeholder="Country" />
                    <span asp-validation-for="Country" class="validation-message"></span>
                </div>
            </div>
        </div>

        <div class="form-card">
            <div class="form-group gift-wrap-option">
                <div class="custom-checkbox">
                    <input asp-for="GiftWrap" class="form-check-input" id="giftWrap" />
                    <label asp-for="GiftWrap" class="form-check-label" for="giftWrap">
                        <i class="fas fa-gift me-2"></i>Add gift wrapping
                    </label>
                </div>
            </div>
        </div>

        <button type="submit" class="checkout-btn">
            <i class="fas fa-check-circle me-2"></i>Complete Order
        </button>
    </form>
</div>

<style>
    .checkout-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .checkout-title {
        color: var(--secondary-color);
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .checkout-subtitle {
        color: var(--dark-gray);
        font-size: 16px;
        margin-bottom: 30px;
    }

    .alert-card {
        background-color: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 15px;
        border-radius: var(--radius);
        margin-bottom: 25px;
        display: flex;
        align-items: flex-start;
    }

    .alert-icon {
        color: #ffc107;
        font-size: 24px;
        margin-right: 15px;
    }

    .validation-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

        .validation-list li {
            margin-bottom: 5px;
        }

    .field-name {
        font-weight: 600;
    }

    .checkout-form {
        margin-top: 20px;
    }

    .form-card {
        background-color: white;
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 25px;
        margin-bottom: 25px;
    }

    .form-section-title {
        color: var(--secondary-color);
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--medium-gray);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-row {
        display: flex;
        gap: 15px;
        margin-bottom: 0;
    }

    .form-col {
        flex: 1;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: var(--secondary-color);
    }

    .custom-input {
        width: 100%;
        padding: 12px;
        border: 1px solid var(--medium-gray);
        border-radius: var(--radius);
        font-size: 16px;
        transition: border-color 0.3s;
    }

        .custom-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
            outline: none;
        }

    .validation-message {
        color: #e74c3c;
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    .gift-wrap-option {
        margin-bottom: 0;
    }

    .custom-checkbox {
        display: flex;
        align-items: center;
    }

        .custom-checkbox input {
            margin-right: 10px;
        }

    .checkout-btn {
        background-color: var(--accent-color);
        color: white;
        border: none;
        border-radius: var(--radius);
        padding: 14px 30px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: block;
        width: 100%;
        text-align: center;
        margin-top: 20px;
    }

        .checkout-btn:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }
</style>