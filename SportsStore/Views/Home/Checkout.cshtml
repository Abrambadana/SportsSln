@model SportsStore.Models.Order
@{
    ViewData["Title"] = "Checkout";
    Layout = "_CheckoutLayout";
}
<div class="content-area">
    <h2>Check out now!</h2>
    <p>Please enter your details, and we'll ship your goods right away.</p>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var modelState in ViewData.ModelState)
                {
                    foreach (var error in modelState.Value.Errors)
                    {
                        <li>@modelState.Key: @error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form asp-action="Checkout" asp-controller="Home" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-section">
            <h3>Ship to</h3>
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-section">
            <h3>Address</h3>
            <div class="form-group">
                <label asp-for="Line1" class="form-label"></label>
                <input asp-for="Line1" class="form-control" />
                <span asp-validation-for="Line1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Line2" class="form-label"></label>
                <input asp-for="Line2" class="form-control" />
                <span asp-validation-for="Line2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Line3" class="form-label"></label>
                <input asp-for="Line3" class="form-control" />
                <span asp-validation-for="Line3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="form-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="form-label"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="form-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="GiftWrap" class="form-check-input" />
                <label asp-for="GiftWrap" class="form-check-label"></label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Complete Order</button>
    </form>
</div>