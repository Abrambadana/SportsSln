@using SportsStore.Models
@inject Cart cart
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SPORTS STORE</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .navbar h4 {
                margin: 0;
                color: white;
            }

        .cart-icon {
            color: white;
            font-size: 24px;
            background-color: #555;
            padding: 5px 10px;
            border-radius: 4px;
            display: flex;
            align-items: center;
        }

        .cart-text {
            margin-right: 8px;
            font-size: 16px;
        }

        .main-container {
            display: flex;
            min-height: calc(100vh - 60px);
        }

        .categories-sidebar {
            width: 250px;
            padding: 20px;
            background-color: #f8f9fa;
            border-right: 1px solid #ddd;
        }

        .content-area {
            flex: 1;
            padding: 20px;
        }

        .category-item {
            display: block;
            padding: 10px;
            margin-bottom: 5px;
            color: #333;
            text-decoration: none;
            border-radius: 4px;
            text-align: center;
            border: 2px solid gray;
        }

            .category-item:hover {
                background-color: #e9ecef;
            }

        .product-item {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .price-badge {
            background-color: #007bff;
            color: white;
            padding: 5px 10px;
            border-radius: 20px;
            margin-bottom: 10px;
            display: inline-block;
            font-weight: bold;
        }

        .add-to-cart-btn {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 5px 15px;
            border-radius: 4px;
            cursor: pointer;
        }

        .pagination {
            display: flex;
            gap: 5px;
            margin-top: 20px;
        }

            .pagination a {
                display: inline-block;
                padding: 5px 10px;
                border: 1px solid #007bff;
                text-decoration: none;
                color: #007bff;
            }

                .pagination a.active {
                    background-color: #007bff;
                    color: white;
                }
    </style>
</head>
<body>
    <div class="navbar">
        <h4>Welcome to SPORTS STORE</h4>
        <div class="cart-icon">
            <span class="cart-text">Your Cart: @(cart.Lines.Sum(l => l.Quantity)) item(s) @cart.ComputeTotalValue().ToString("c")</span>
            <i class="fas fa-shopping-cart"></i>
        </div>
    </div>
    <div class="main-container">
        <div class="categories-sidebar">
            <h4>Categories</h4>
            <div class="categories">
                <a href="/" class="category-item">Home</a>
                <a href="/Chess" class="category-item">Chess</a>
                <a href="/Soccer" class="category-item">Soccer</a>
                <a href="/Watersports" class="category-item">Watersports</a>
            </div>
        </div>
        <div class="content-area">
            @RenderBody()
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>