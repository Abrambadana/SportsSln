@model CartIndexViewModel
@{
    Layout = "_CartLayout";
}

<div class="cart-container">
    <h2 class="cart-title">
        <i class="fas fa-shopping-cart me-2"></i>Your Shopping Cart
    </h2>

    @if (Model.Cart.Lines.Count() > 0)
    {
        <div class="cart-card">
            <div class="table-responsive">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th class="text-center">Quantity</th>
                            <th class="text-center">Item</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Subtotal</th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model.Cart.Lines)
                        {
                            <tr>
                                <td class="text-center">@line.Quantity</td>
                                <td class="text-center product-name">@line.Product.Name</td>
                                <td class="text-center">₱@line.Product.Price.ToString("F2")</td>
                                <td class="text-center subtotal-price">₱@((line.Quantity * line.Product.Price).ToString("F2"))</td>
                                <td class="text-center">
                                    <form asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="productId" value="@line.Product.ProductId" />
                                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                                        <button type="submit" class="remove-btn">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="total-row">
                            <td colspan="3" class="text-end">Total:</td>
                            <td class="text-center total-price">₱@Model.Cart.ComputeTotalValue().ToString("F2")</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="cart-actions">
            <a class="continue-btn" href="/">
                <i class="fas fa-arrow-left me-2"></i>Continue Shopping
            </a>
            <a class="checkout-btn" asp-controller="Home" asp-action="Checkout">
                <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
            </a>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <div class="empty-cart-icon">
                <i class="fas fa-shopping-basket"></i>
            </div>
            <h3>Your cart is empty!</h3>
            <p>Looks like you haven't added any products to your cart yet.</p>
            <a href="/" class="continue-btn">
                <i class="fas fa-store me-2"></i>Browse Products
            </a>
        </div>
    }
</div>

<style>
    .cart-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .cart-title {
        color: var(--secondary-color);
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 25px;
    }

    .cart-card {
        background-color: white;
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
        margin-bottom: 25px;
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
    }

        .cart-table th {
            background-color: var(--secondary-color);
            color: white;
            padding: 15px;
            font-weight: 600;
            text-align: left;
        }

        .cart-table td {
            padding: 15px;
            border-bottom: 1px solid var(--medium-gray);
        }

        .cart-table tbody tr:hover {
            background-color: var(--light-gray);
        }

    .product-name {
        font-weight: 500;
        color: var(--secondary-color);
    }

    .subtotal-price {
        font-weight: 600;
    }

    .total-row {
        background-color: var(--light-gray);
    }

        .total-row td {
            padding: 15px;
            border-bottom: none;
        }

    .total-price {
        font-weight: 700;
        font-size: 18px;
        color: var(--secondary-color);
    }

    .remove-btn {
        background-color: #e74c3c;
        color: white;
        border: none;
        border-radius: var(--radius);
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .remove-btn:hover {
            background-color: #c0392b;
        }

    .cart-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .continue-btn {
        background-color: var(--primary-color);
        color: white;
        text-decoration: none;
        padding: 12px 25px;
        border-radius: var(--radius);
        font-weight: 600;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
    }

        .continue-btn:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
            color: white;
        }

    .checkout-btn {
        background-color: var(--accent-color);
        color: white;
        text-decoration: none;
        padding: 12px 25px;
        border-radius: var(--radius);
        font-weight: 600;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
    }

        .checkout-btn:hover {
            background-color: #218838;
            transform: translateY(-2px);
            color: white;
        }

    .empty-cart {
        background-color: white;
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 40px;
        text-align: center;
    }

    .empty-cart-icon {
        font-size: 60px;
        color: var(--dark-gray);
        margin-bottom: 20px;
    }

    .empty-cart h3 {
        color: var(--secondary-color);
        font-size: 24px;
        margin-bottom: 10px;
    }

    .empty-cart p {
        color: var(--dark-gray);
        margin-bottom: 25px;
    }

    .text-center {
        text-align: center;
    }

    .text-end {
        text-align: right;
    }

    .me-2 {
        margin-right: 8px;
    }
</style>